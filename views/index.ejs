<!DOCTYPE html>
<html>
  <!-- HEAD -->
  <%- include('partials/head') %>
  <body>
  <!-- HEADER -->
  <%- include('partials/header') %>

  <!-- BANNER -->
  <div class="banner"></div>

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<% productsVisited.forEach(product => { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/detail/<%= product.id %>/<%= product.category %>"></a>
						<figure class="product-box_image">
							<img src="/images/products/<%- product.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<%= (product.price - product.price * product.discount / 100) %></h2>
							<% if (product.discount != 0) { %>
								<span><%= product.discount %>40% OFF</span>
							<% } %>
							<p><%= product.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% productsInSale.forEach(product => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%= product.id %>/<%= product.category %>">
							<figure class="product-box_image">
								<img src="/images/products/<%- product.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%= (product.price - product.price * product.discount / 100) %></h2>
								<% if (product.discount != 0) { %>
									<span><%= product.discount %>40% OFF</span>
								<% } %>
								<p><%= product.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
				<% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
  <%- include('partials/footer') %>

  <!-- SCRIPTS -->
  <%- include('partials/scripts') %>
</body>
</html>
